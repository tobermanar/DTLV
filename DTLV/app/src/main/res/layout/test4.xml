<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/blueBackground">


    <LinearLayout
        style="@style/blueBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.03"
            android:id="@+id/frameLayout13" >

            <FrameLayout
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical" />

            <TextView
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:id="@+id/textView23"
                android:layout_gravity="center"
                android:background="#ffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/frameLayout14"
            android:layout_weight="0.04" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="483dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/linearLayout12"
            android:weightSum="1"
            android:layout_weight="0.87" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/linearLayout11" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05"
                    android:id="@+id/linearLayout10"
                    android:weightSum="1" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.98"
                        android:id="@+id/linearLayout9"
                        android:weightSum="1" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.31"
                            android:id="@+id/frameLayout15" />

                        <TextView
                            android:layout_width="767dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/test4_name"
                            android:id="@+id/test4_nom"
                            android:background="#ffffff"
                            android:layout_weight="0.19" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.15" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/test4_instruction"
                            android:id="@+id/test4_consigne"
                            android:background="#ffffff"
                            android:layout_weight="0.19" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:id="@+id/frameLayout16" >

                        <ImageButton
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:id="@+id/test4_bhelp"
                            android:layout_gravity="center"
                            android:background="@drawable/help_3"
                            android:clickable="true" />
                    </FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.92"
                    android:id="@+id/frameLayout18" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|top"
                        android:weightSum="1" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.98"
                            android:id="@+id/frameLayout17" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:weightSum="1">

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="0.95"
                                android:weightSum="1"
                                android:layout_marginTop="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="0.98"
                                    android:id="@+id/frameLayout19" >

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.21"
                                        android:id="@+id/test4_layout1">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="@string/test4_text_ex1"
                                            android:id="@+id/test4_ex1_txt"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="25dp" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex1_bplay"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/play_blue" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex1_bvalid"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/validate" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex1_brefuse"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/refuse" />
                                    </LinearLayout>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="0.98"
                                    android:id="@+id/frameLayout20" >

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.21"
                                        android:id="@+id/test4_layout2">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="@string/test4_text_ex2"
                                            android:id="@+id/test4_ex2_txt"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="25dp" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex2_bplay"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/play_blue" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex2_bvalid"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/validate" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex2_brefuse"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/refuse" />
                                    </LinearLayout>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="0.98"
                                    android:id="@+id/frameLayout21" >

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.21"
                                        android:id="@+id/test4_layout3">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="@string/test4_text_ex"
                                            android:id="@+id/test4_ex_txt"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="25dp" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex_bplay"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/play_blue" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex_bvalid"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/validate" />

                                        <ImageButton
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test4_ex_brefuse"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/refuse" />
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>
                        </FrameLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:weightSum="1" >

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.94" />

                            <ImageButton
                                android:layout_width="59dp"
                                android:layout_height="80dp"
                                android:id="@+id/test4_bnext"
                                android:background="@drawable/next"
                                android:layout_weight="0.03" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/blueBackground">

    <LinearLayout
        style="@style/blueBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1" >
        <!-- Avancement lateral -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <FrameLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_weight="0.33"
                android:weightSum="0.8">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/tuto_bt1"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/tuto_bt2"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/tuto_bt3"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/tuto_bt4"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/tuto_bt5"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/tuto_bt6"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/tuto_bt7"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/tuto_bt8"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/tuto_bt9"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/tuto_bt10"
                    android:layout_weight="0.08"
                    android:clickable="false"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!-- Fin avancement lateral -->
        <!-- Corps central -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1" >
            <!-- Titre et consignes -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <!--NOM DE LA TACHE-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/test3_name"
                        android:id="@+id/task_name"
                        android:background="#ffffff"
                        android:layout_weight="0.6"/>
                    <!--CONSIGNE-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/scrollView"
                        android:layout_gravity="center_horizontal"
                        android:scrollbars="vertical"
                        android:fillViewport="true"
                        android:layout_weight="0.4">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/test3_instruction"
                            android:id="@+id/task_instruction"
                            android:background="#ffffff"
                            android:textSize="@dimen/title_text_size"/>
                    </ScrollView>
                </LinearLayout>
                <!--BOUTON HELP-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.83">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:id="@+id/test3_bhelp"
                            android:background="@drawable/help_3"
                            android:clickable="true"
                            android:layout_marginLeft="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Fin titre et consignes -->
            <!-- Corps du test -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3" >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <!--CONTENU DU TEST-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/scrollView2"
                        android:layout_gravity="center_horizontal"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tuto_layout"
                            android:weightSum="1">
                            <!-- Contenu effectif du test -->

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="0.92"
                                android:id="@+id/frameLayout12" >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="left|center_vertical">
                                    <!--START TIMER-->
                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:text="@string/test3_launch"
                                        android:id="@+id/test3_launch"
                                        android:layout_gravity="center_horizontal"
                                        android:textAlignment="center"
                                        android:textSize="25dp"
                                        android:foregroundGravity="center"
                                        style="@style/button_type1"/>
                                    <!--GUESS LETTER-->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/test3_text0"
                                        android:id="@+id/test3_lettre"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.31"
                                        android:textSize="190dp"
                                        android:textStyle="bold"
                                        android:textAlignment="center" />
                                </LinearLayout>
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>
                                <!--BOUTON PLUS-->
                                <!--BOUTON MINUS-->

                                <!--SCORE-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="bottom|center|center_vertical">
                                    <TextView
                                        android:layout_width="120dp"
                                        android:layout_height="60dp"
                                        android:gravity="center"
                                        android:text="@string/test3_score"
                                        android:layout_gravity="center_horizontal|bottom"
                                        android:textAlignment="center"
                                        android:textSize="25dp"
                                        android:background="#5bab9e9e" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="0"
                                        android:id="@+id/test3_score"
                                        android:layout_gravity="center_horizontal|bottom"
                                        android:layout_weight="0.31"
                                        android:textSize="60dp"
                                        android:textStyle="bold"
                                        android:textAlignment="center"/>
                                </LinearLayout>

                                <!--TIMER-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="top|center|center_vertical">
                                    <TextView
                                        android:layout_width="120dp"
                                        android:layout_height="60dp"
                                        android:text="@string/test3_time"
                                        android:layout_gravity="center_horizontal|bottom"
                                        android:textAlignment="center"
                                        android:gravity="center"
                                        android:textSize="25dp"
                                        android:background="#5bab9e9e"/>
                                    <TextView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:text="60"
                                        android:id="@+id/test3_countdown"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.31"
                                        android:textSize="90dp"
                                        android:textStyle="bold"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="90dp"
                                    android:layout_gravity="right|bottom">


                                    <ImageButton
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:scaleType="fitXY"
                                        android:id="@+id/test3_plus"
                                        android:layout_gravity="center"
                                        android:background="@drawable/plus" />


                                    <ImageButton
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:id="@+id/test3_minus"
                                        android:layout_gravity="center"
                                        android:background="@drawable/minus"/>
                                </LinearLayout>



                            </FrameLayout>

                            <!-- Fin contenu effectif du test -->

                        </LinearLayout>
                    </ScrollView>
                    <ImageButton
                        android:layout_width="@dimen/next_size_width"
                        android:layout_height="@dimen/next_size_height"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/test3_bnext"
                        android:background="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <!-- Fin contenu du test -->
            </LinearLayout>
            <!-- Fin corps du test -->
        </LinearLayout>
        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <!-- Fin corps central -->
    </LinearLayout>
</LinearLayout>
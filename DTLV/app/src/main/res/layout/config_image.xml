<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/whiteBackground"
    android:weightSum="1">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/big_picture_size"
                android:layout_height="@dimen/big_picture_size"
                android:scaleType="fitXY"
                android:id="@+id/config_image1_full"
                android:layout_centerInParent="true"
                android:src="@drawable/config_image"
                android:foregroundGravity="center" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:weightSum="1"
            android:layout_weight="0.20">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <SeekBar
                android:layout_width="525dp"
                android:layout_height="40dp"
                android:id="@+id/brightness_seekBar"
                android:layout_gravity="center"
                android:progress="50"
                android:max="100" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1">
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:id="@+id/config_back"
            android:src="@drawable/back_arrow"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/blueBackground">

    <LinearLayout
        style="@style/blueBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1" >
        <!-- Avancement lateral -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <FrameLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_weight="0.33"
                android:weightSum="0.8">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/tuto_bt1"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/tuto_bt2"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/tuto_bt3"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/tuto_bt4"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/tuto_bt5"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/tuto_bt6"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/tuto_bt7"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/tuto_bt8"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/tuto_bt9"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/tuto_bt10"
                    android:layout_weight="0.08"
                    android:clickable="false"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!-- Fin avancement lateral -->
        <!-- Corps central -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1" >
            <!-- Titre et consignes -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <!--NOM DE LA TACHE-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/test1_name"
                        android:id="@+id/task_name"
                        android:background="#ffffff"
                        android:layout_weight="0.6"/>
                    <!--CONSIGNE-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/scrollView"
                        android:layout_gravity="center_horizontal"
                        android:scrollbars="vertical"
                        android:fillViewport="true"
                        android:layout_weight="0.4">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/test1_instruction"
                            android:id="@+id/task_instruction"
                            android:background="#ffffff"
                            android:textSize="@dimen/title_text_size"/>
                    </ScrollView>
                </LinearLayout>
                <!--BOUTON HELP-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.83">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:id="@+id/test1_bhelp"
                            android:background="@drawable/help_3"
                            android:clickable="true"
                            android:layout_marginLeft="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Fin titre et consignes -->
            <!-- Corps du test -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3" >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <!--CONTENU DU TEST-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/scrollView2"
                        android:layout_gravity="center_horizontal"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tuto_layout"
                            android:weightSum="1">
                            <!-- Contenu effectif du test -->

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:weightSum="0.99">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33">
                                    <!-- Image 1 et boutons valider 1 et refuser 1 -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test1_layout1">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp">
                                            <ImageButton
                                                android:layout_width="@dimen/picture_size"
                                                android:layout_height="@dimen/picture_size"
                                                android:scaleType="fitXY"
                                                android:background="@color/white"
                                                android:layout_gravity="bottom"
                                                android:id="@+id/test1_image1"
                                                android:src="@drawable/test1_image1"
                                                android:layout_centerVertical="true"/>
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toRightOf="@id/test1_image1">
                                                <ImageButton
                                                    android:layout_width="@dimen/button_size"
                                                    android:layout_height="@dimen/button_size"
                                                    android:scaleType="fitXY"
                                                    android:layout_marginLeft="15dp"
                                                    android:id="@+id/test1_validate1"
                                                    android:src="@drawable/validate"
                                                    android:background="@null"/>
                                                <ImageButton
                                                    android:layout_width="@dimen/button_size"
                                                    android:layout_height="@dimen/button_size"
                                                    android:scaleType="fitXY"
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginTop="15dp"
                                                    android:id="@+id/test1_refuse1"
                                                    android:src="@drawable/refuse"
                                                    android:background="@null"
                                                    android:layout_below="@id/test1_validate1" />
                                            </RelativeLayout>
                                        </RelativeLayout>
                                    </LinearLayout>
                                    <!-- Fin Image 1 et boutons valider 1 et refuser 1 -->
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33">
                                    <!-- Image 2 et boutons valider 2 et refuser 2 -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test1_layout2">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp">
                                            <ImageButton
                                                android:layout_width="@dimen/picture_size"
                                                android:layout_height="@dimen/picture_size"
                                                android:scaleType="fitXY"
                                                android:layout_gravity="bottom"
                                                android:background="@color/white"
                                                android:id="@+id/test1_image2"
                                                android:src="@drawable/test1_image2"
                                                android:layout_centerVertical="true"/>
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toRightOf="@id/test1_image2">
                                                <ImageButton
                                                    android:layout_width="@dimen/button_size"
                                                    android:layout_height="@dimen/button_size"
                                                    android:scaleType="fitXY"
                                                    android:layout_marginLeft="15dp"
                                                    android:id="@+id/test1_validate2"
                                                    android:src="@drawable/validate"
                                                    android:background="@null"/>
                                                <ImageButton
                                                    android:layout_width="@dimen/button_size"
                                                    android:layout_height="@dimen/button_size"
                                                    android:scaleType="fitXY"
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginTop="15dp"
                                                    android:id="@+id/test1_refuse2"
                                                    android:src="@drawable/refuse"
                                                    android:background="@null"
                                                    android:layout_below="@id/test1_validate2" />
                                            </RelativeLayout>
                                        </RelativeLayout>
                                    </LinearLayout>
                                    <!-- Fin Image 2 et boutons valider 2 et refuser 2 -->
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33">
                                    <!-- Image 3 et boutons valider 3 et refuser 3 -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test1_layout3">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp">
                                            <ImageButton
                                                android:layout_width="@dimen/picture_size"
                                                android:layout_height="@dimen/picture_size"
                                                android:scaleType="fitXY"
                                                android:layout_gravity="bottom"
                                                android:background="@color/white"
                                                android:id="@+id/test1_image3"
                                                android:src="@drawable/test1_image3"
                                                android:layout_centerVertical="true"/>
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toRightOf="@id/test1_image3">
                                                <ImageButton
                                                    android:layout_width="@dimen/button_size"
                                                    android:layout_height="@dimen/button_size"
                                                    android:scaleType="fitXY"
                                                    android:layout_marginLeft="15dp"
                                                    android:id="@+id/test1_validate3"
                                                    android:src="@drawable/validate"
                                                    android:background="@null"/>
                                                <ImageButton
                                                    android:layout_width="@dimen/button_size"
                                                    android:layout_height="@dimen/button_size"
                                                    android:scaleType="fitXY"
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginTop="15dp"
                                                    android:id="@+id/test1_refuse3"
                                                    android:src="@drawable/refuse"
                                                    android:background="@null"
                                                    android:layout_below="@id/test1_validate3" />
                                                </RelativeLayout>
                                        </RelativeLayout>
                                    </LinearLayout>
                                    <!-- Fin Image 3 et boutons valider 3 et refuser 3 -->
                                </LinearLayout>

                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:weightSum="0.99">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33">
                                    <!-- Image 4 et boutons valider 4 et refuser 4 -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test1_layout4">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp">
                                        <ImageButton
                                            android:layout_width="@dimen/picture_size"
                                            android:layout_height="@dimen/picture_size"
                                            android:scaleType="fitXY"
                                            android:background="@color/white"
                                            android:layout_gravity="bottom"
                                            android:id="@+id/test1_image4"
                                            android:src="@drawable/test1_image4"
                                            android:layout_centerVertical="true"/>
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_toRightOf="@id/test1_image4">
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:layout_marginLeft="15dp"
                                                android:id="@+id/test1_validate4"
                                                android:src="@drawable/validate"
                                                android:background="@null"/>
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginTop="15dp"
                                                android:id="@+id/test1_refuse4"
                                                android:src="@drawable/refuse"
                                                android:background="@null"
                                                android:layout_below="@id/test1_validate4" />
                                        </RelativeLayout>
                                    </RelativeLayout>
                                    </LinearLayout>
                                    <!-- Fin Image 4 et boutons valider 4 et refuser 4 -->
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33">
                                    <!-- Image 5 et boutons valider 5 et refuser 5 -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test1_layout5">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp">
                                        <ImageButton
                                            android:layout_width="@dimen/picture_size"
                                            android:layout_height="@dimen/picture_size"
                                            android:scaleType="fitXY"
                                            android:background="@color/white"
                                            android:layout_gravity="bottom"
                                            android:id="@+id/test1_image5"
                                            android:src="@drawable/test1_image5"
                                            android:layout_centerVertical="true"/>
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_toRightOf="@id/test1_image5">
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:layout_marginLeft="15dp"
                                                android:id="@+id/test1_validate5"
                                                android:src="@drawable/validate"
                                                android:background="@null"/>
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginTop="15dp"
                                                android:id="@+id/test1_refuse5"
                                                android:src="@drawable/refuse"
                                                android:background="@null"
                                                android:layout_below="@id/test1_validate5" />
                                        </RelativeLayout>
                                    </RelativeLayout>
                                    </LinearLayout>
                                    <!-- Fin Image 5 et boutons valider 5 et refuser 5 -->
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33">
                                    <!-- Image 6 et boutons valider 6 et refuser 6 -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test1_layout6">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp">
                                        <ImageButton
                                            android:layout_width="@dimen/picture_size"
                                            android:layout_height="@dimen/picture_size"
                                            android:scaleType="fitXY"
                                            android:background="@color/white"
                                            android:layout_gravity="bottom"
                                            android:id="@+id/test1_image6"
                                            android:src="@drawable/test1_image6"
                                            android:layout_centerVertical="true"/>
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_toRightOf="@id/test1_image6">
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:layout_marginLeft="15dp"
                                                android:id="@+id/test1_validate6"
                                                android:src="@drawable/validate"
                                                android:background="@null"/>
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginTop="15dp"
                                                android:id="@+id/test1_refuse6"
                                                android:src="@drawable/refuse"
                                                android:background="@null"
                                                android:layout_below="@id/test1_validate6" />
                                        </RelativeLayout>
                                    </RelativeLayout>
                                    </LinearLayout>
                                    <!-- Fin Image 6 et boutons valider 6 et refuser 6 -->
                                </LinearLayout>

                            </LinearLayout>

                            <!-- Fin contenu effectif du test -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4"/>
                        </LinearLayout>
                    </ScrollView>
                    <ImageButton
                        android:layout_width="@dimen/next_size_width"
                        android:layout_height="@dimen/next_size_height"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/test1_bnext"
                        android:background="@drawable/next"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <!-- Fin contenu du test -->
            </LinearLayout>
            <!-- Fin corps du test -->
        </LinearLayout>
        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <!-- Fin corps central -->
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/blueBackground">

    <LinearLayout
        style="@style/blueBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_weight="0.33"
                android:weightSum="1">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/tuto_bt1"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/tuto_bt2"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/tuto_bt3"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/tuto_bt4"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/tuto_bt5"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/tuto_bt6"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/tuto_bt7"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/tuto_bt8"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/tuto_bt9"
                    android:layout_weight="0.08"
                    android:clickable="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/tuto_bt10"
                    android:layout_weight="0.08"
                    android:clickable="false"/>
                <FrameLayout
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>
        </LinearLayout>
        <!--TEST-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="483dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/linearLayout9"
            android:weightSum="1"
            android:layout_weight="0.87" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/linearLayout7" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05"
                    android:id="@+id/linearLayout6"
                    android:weightSum="1" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/title_size"
                        android:layout_weight="0.98"
                        android:id="@+id/linearLayout5"
                        android:weightSum="1" >
                        <!--NOM DE LA TACHE-->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.31"
                            android:id="@+id/frameLayout9" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/test9_name"
                            android:id="@+id/textView17"
                            android:background="#ffffff"
                            android:layout_weight="0.19" />
                        <!--CONSIGNE-->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.15" />
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/scrollView"
                            android:layout_gravity="center_horizontal"
                            android:scrollbars="vertical"
                            android:fillViewport="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/test9_instruction"
                                android:id="@+id/textView20"
                                android:background="#ffffff"
                                android:layout_weight="0.19"
                                android:textSize="@dimen/title_text_size"/>
                        </ScrollView>
                    </LinearLayout>
                    <!--BOUTON HELP-->
                    <FrameLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:id="@+id/frameLayout10" >
                        <ImageButton
                            android:layout_width="@dimen/help_size"
                            android:layout_height="@dimen/help_size"
                            android:id="@+id/test9_bhelp"
                            android:layout_gravity="center"
                            android:background="@drawable/help_3"
                            android:clickable="true" />
                    </FrameLayout>
                    <!--ok-->
                </LinearLayout>
                <!--OK-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.92"
                    android:id="@+id/frameLayout12" >

                    <!--CONTENU DU TEST-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:id="@+id/linearLayout1">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.21"
                            android:id="@+id/frameLayout19" >

                            <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.21"
                            android:id="@+id/linearLayout3">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/test9_text0"
                                    android:id="@+id/test9_text0"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="30dp"
                                    android:textSize="@dimen/text_box_text_medium_size" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.21"
                                android:id="@+id/test9_layout1"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/test9_text1"
                                    android:id="@+id/test9_text1"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_box_text_medium_size"/>
                                </LinearLayout>

                            </LinearLayout>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.21"
                            android:id="@+id/frameLayout20" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.33"
                                    android:layout_gravity="center">
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="@dimen/text_box_test9_size"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test9_layout2">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/test9_text2"
                                            android:id="@+id/test9_text2"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="@dimen/text_box_text_medium_size"/>
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_size"
                                            android:layout_weight="0.33"
                                            android:gravity="right"
                                            android:weightSum="1">
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:id="@+id/test9_text2_bvalid"
                                                android:layout_marginLeft="10dp"
                                                android:layout_gravity="center_vertical"
                                                android:background="@drawable/validate" />

                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:id="@+id/test9_text2_brefuse"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="20dp"
                                                android:layout_gravity="center_vertical"
                                            android:background="@drawable/refuse" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:layout_gravity="center">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="@dimen/text_box_test9_size"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/test9_layout3">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/test9_text3"
                                        android:id="@+id/test9_text3"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="@dimen/text_box_text_medium_size"/>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/button_size"
                                        android:layout_weight="0.33"
                                        android:gravity="right"
                                        android:weightSum="1">
                                        <ImageButton
                                            android:layout_width="@dimen/button_size"
                                            android:layout_height="@dimen/button_size"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test9_text3_bvalid"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/validate" />

                                        <ImageButton
                                            android:layout_width="@dimen/button_size"
                                            android:layout_height="@dimen/button_size"
                                            android:scaleType="fitXY"
                                            android:id="@+id/test9_text3_brefuse"
                                            android:layout_marginLeft="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:background="@drawable/refuse" />
                                    </LinearLayout>
                                </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.21"
                            android:id="@+id/frameLayout21" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.33"
                                    android:layout_gravity="center">
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="@dimen/text_box_test9_size"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test9_layout4">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/test9_text4"
                                            android:id="@+id/test9_text4"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="@dimen/text_box_text_medium_size"/>
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_size"
                                            android:layout_weight="0.33"
                                            android:gravity="right"
                                            android:weightSum="1">
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:id="@+id/test9_text4_bvalid"
                                                android:layout_marginLeft="10dp"
                                                android:layout_gravity="center_vertical"
                                                android:background="@drawable/validate" />

                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:id="@+id/test9_text4_brefuse"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="20dp"
                                                android:layout_gravity="center_vertical"
                                                android:background="@drawable/refuse" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.33"
                                    android:layout_gravity="center">
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="@dimen/text_box_test9_size"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/test9_layout5">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/test9_text5"
                                            android:id="@+id/test9_text5"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="@dimen/text_box_text_medium_size"/>
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/button_size"
                                            android:layout_weight="0.33"
                                            android:gravity="right"
                                            android:weightSum="1">
                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:id="@+id/test9_text5_bvalid"
                                                android:layout_marginLeft="10dp"
                                                android:layout_gravity="center_vertical"
                                                android:background="@drawable/validate" />

                                            <ImageButton
                                                android:layout_width="@dimen/button_size"
                                                android:layout_height="@dimen/button_size"
                                                android:scaleType="fitXY"
                                                android:id="@+id/test9_text5_brefuse"
                                                android:layout_marginLeft="10dp"
                                                android:layout_gravity="center_vertical"
                                                android:background="@drawable/refuse" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>
                <!--BOUTON SUIVANT-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/next_size"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="1" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.98" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/test9_bnext"
                        android:src="@drawable/next"
                        android:layout_gravity="bottom"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@null" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>